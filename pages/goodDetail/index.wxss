/* pages/goodDetail/index.wxss */
.bottom_view {
  width: 100%;
  position: fixed;
  bottom: 30rpx;
  background: red;
}

.bottom_btn {
  margin-top: 30rpx;
  width: 450rpx;
  background: #14a1fd;
  color: #fff;
  border-radius: 70rpx;
}

.cover_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.buy_box {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  overflow: hidden;
}


